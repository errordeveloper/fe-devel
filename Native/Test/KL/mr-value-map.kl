operator multByPi(
  Integer input,
  io Scalar output
  )
{
  output = 3.14 * input;
}

operator multByShared(
  Integer input,
  io Scalar output,
  Scalar shared
  )
{
  output = input * shared;
}

operator entry() {
  ValueProducer<Scalar> vp;
  
  vp = createValueMap(
    createConstValue( 42 ),
    multByPi
    );
  report vp;
  report vp.produce();

  vp = createValueMap(
    createConstValue( 2 ),
    multByShared,
    createConstValue( 2.71 )
    );
  report vp;
  report vp.produce();
}
