struct RGB {
  Byte r; Byte g; Byte b;
};

struct VideoHandle {
  Data pointer;
  Size width;
  Size height;
  Scalar duration;
  Scalar fps;
  Scalar time;
};

function FabricVIDEOOpenResource(
  Data resourceData,
  Size resourceDataSize,
  io VideoHandle handle
);

function FabricVIDEOOpenFileHandle(
  String file,
  io VideoHandle handle
);

function FabricVIDEOCreateFromFileHandle(
  String file,
  Size width,
  Size height,
  io VideoHandle handle,
);

function FabricVIDEOFreeHandle( io VideoHandle handle );
  
function FabricVIDEOSeekTime( io VideoHandle handle, io Scalar time);

function FabricVIDEOGetAllPixels(
  io VideoHandle handle,
  io RGB pixels[]
);

function FabricVIDEOWriteAllPixels(
  io VideoHandle handle,
  io RGB pixels[]
);

function ~VideoHandle() = "FabricVIDEOFreeHandle";
